---
export interface Props {
  title: string
  body: string
  href: string
}

const { href, title, body } = Astro.props
---

<li class='link-card'>
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {body}
    </p>
  </a>
</li>
<style lang='scss'>
  .link-card {
    --border-radius: 0.5rem;
    list-style: none;
    display: flex;
    padding: 0.15rem;
    border-radius: var(--border-radius);
    position: relative;
    border: 1px solid #999;
    overflow: hidden;
    z-index: -1;
    a {
      width: 100%;
      text-decoration: none;
      color: #111;
      line-height: 1.4;
      padding: 1rem 1.3rem;
      border-radius: 0.35rem;
    }
    &:after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        71.18deg,
        rgb(0, 34, 255) -27.32%,
        rgb(0, 34, 255) -16.39%,
        rgb(81, 121, 254) -7.38%,
        rgb(165, 237, 182) 30.59%,
        rgb(250, 232, 90) 46.06%,
        rgb(253, 172, 62) 62.61%,
        rgb(255, 92, 0) 75.82%
      );
      transform: scaleX(0);
      opacity: 0;
      transform-origin: left;
      transition: transform 0.6s, opacity 0.3s;
      z-index: -9;
    }

    @media (hover: hover) {
      &:hover:after {
        transform: scaleX(1);
        opacity: 1;
      }
    }
    &::before {
      content: '';
      width: calc(100% - 4px);
      height: calc(100% - 4px);
      background-color: #fff;
      position: absolute;
      top: 2px;
      left: 2px;
      z-index: -1;
      border-radius: 0.5rem;
    }
  }

  h2 {
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    color: #444;
  }
</style>
