---
import Logo from '@components/icons/Logo'
import ThemeSwitcher from './ThemeSwitcher'
const navigationLinks = [
  {
    label: 'Home',
    route: '#home',
  },
  {
    label: 'Projects',
    route: '#projects',
  },
  {
    label: 'About',
    route: '#about',
  },
]
---

<header class='navbar'>
  <nav class='navbar__container'>
    <a href='/'>
      <Logo className='logo' />
    </a>
    {navigationLinks.map(({ label, route }) => <a href={route}>{label}</a>)}
    <ThemeSwitcher
      client:visible
      labels={{ useLight: 'themeToggle.useLight', useDark: 'themeToggle.useDark' }}
    />
  </nav>
</header>
<style lang='scss'>
  .navbar {
    color: var(--color-text-1);
    padding: var(--size-spacing-2) 0;
    font-size: var(--font-size-2);
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    position: sticky;
    transform: scaleZ(1);
    top: 0;
    backdrop-filter: blur(10px);
    &__container {
      width: var(--section-width);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
  }
  .logo {
    height: 3rem;
    width: auto;
  }
</style>
